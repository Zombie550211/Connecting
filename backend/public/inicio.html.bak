<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Inicio - Connecting</title>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    :root {
      /* Colores base */
      --primary: #2563eb;
      --primary-dark: #1d4ed8;
      --primary-light: #3b82f6;
      --secondary: #10b981;
      --accent: #8b5cf6;
      --danger: #ef4444;
      --warning: #f59e0b;
      --success: #10b981;
      
      /* Escala de grises */
      --gray-50: #f9fafb;
      --gray-100: #f3f4f6;
      --gray-200: #e5e7eb;
      --gray-300: #d1d5db;
      --gray-400: #9ca3af;
      --gray-500: #6b7280;
      --gray-600: #4b5563;
      --gray-700: #374151;
      --gray-800: #1f2937;
      --gray-900: #111827;
      
      /* Tema claro/oscuro */
      --bg-color: #f8fafc;
      --surface: #ffffff;
      --text-primary: #1f2937;
      --text-secondary: #4b5563;
      
      /* Bordes y sombras */
      --border-color: #e5e7eb;
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      --shadow-md: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
      
      /* Bordes redondeados */
      --radius-sm: 0.375rem;
      --radius: 0.5rem;
      --radius-md: 0.75rem;
      --radius-lg: 1rem;
      --radius-xl: 1.5rem;
      --radius-full: 9999px;
      
      /* Transiciones */
      --transition: all 0.2s ease-in-out;
      --transition-slow: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      
      /* Tipograf铆a */
      --font-sans: 'Inter', 'Segoe UI', Roboto, -apple-system, BlinkMacSystemFont, sans-serif;
      --font-heading: 'Poppins', 'Inter', sans-serif;
      
      /* Espaciado */
      --space-1: 0.25rem;
      --space-2: 0.5rem;
      --space-3: 0.75rem;
      --space-4: 1rem;
      --space-5: 1.25rem;
      --space-6: 1.5rem;
      --space-8: 2rem;
      --space-10: 2.5rem;
      --space-12: 3rem;
      --space-16: 4rem;
      
      /* Variables espec铆ficas del layout */
      --sidebar-width: 260px;
      --header-height: 64px;
      --max-width: 1440px;
    }
    * { box-sizing: border-box; }
    body {
      font-family: 'Segoe UI', 'Roboto', 'Montserrat', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      background: var(--gris-bg);
      color: var(--azul-oscuro);
    }
    .layout {
      display: flex;
      min-height: 100vh;
    }
    /* Barra lateral */
    .sidebar {
      width: var(--sidebar-width);
      min-width: var(--sidebar-width);
      height: 100vh;
      position: fixed;
      left: 0;
      top: 0;
      background: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);
      color: white;
      padding: 1.5rem 0;
      display: flex;
      flex-direction: column;
      z-index: 50;
      box-shadow: var(--shadow-lg);
      transition: transform 0.3s ease, width 0.3s ease;
      overflow-y: auto;
    }
    
    @media (max-width: 1024px) {
      .sidebar {
        transform: translateX(-100%);
      }
      .sidebar.mobile-open {
        transform: translateX(0);
      }
    }
    .sidebar-logo {
      width: 58px;
      height: 58px;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: none;
      box-shadow: none;
      border-radius: 0;
    }
    .sidebar-logo img {
      width: 48px;
      height: 48px;
      display: block;
    }
    .sidebar-title {
      color: var(--sidebar-accent);
      font-size: 1.15em;
      font-weight: 700;
      text-align: center;
      margin-bottom: 24px;
      letter-spacing: .5px;
    }
    .sidebar-nav {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 13px;
      margin-bottom: 18px;
    }
    .sidebar-nav button {
      width: 95%;
      margin: 0 auto;
      padding: 12px 0;
      background: none;
      border: none;
      color: var(--sidebar-text);
      font-size: 1em;
      font-weight: 700;
      border-radius: 16px;
      text-align: left;
      padding-left: 18px;
      transition: background 0.15s, color 0.15s;
      letter-spacing: 0.02em;
      cursor: pointer;
    }
    .sidebar-nav button.active, .sidebar-nav button:hover {
      background: var(--sidebar-accent);
      color: white;
    }
    .sidebar-lema {
      color: var(--sidebar-accent);
      font-style: italic;
      font-size: 0.99em;
      opacity: 0.6;
      margin-top: auto;
      padding: 12px 10px 18px 10px;
      text-align: center;
      font-weight: 600;
    }
    /* MAIN CONTENT */
    /* Contenido principal */
    .main-content {
      flex: 1;
      margin-left: var(--sidebar-width);
      min-height: 100vh;
      padding: 2rem;
      transition: margin 0.3s ease;
      max-width: calc(100% - var(--sidebar-width));
      width: 100%;
    }
    
    @media (max-width: 1024px) {
      .main-content {
        margin-left: 0;
        max-width: 100%;
        padding: 1rem;
      }
    }
    /* Tarjeta de bienvenida */
    .panel-bienvenida {
      background: var(--surface);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      box-shadow: var(--shadow);
      text-align: center;
      margin-bottom: 2rem;
      border: 1px solid var(--border-color);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      position: relative;
      overflow: hidden;
    }
    
    .panel-bienvenida::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--primary), var(--accent));
    }
    
    .panel-bienvenida:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
    .panel-bienvenida h2 {
      margin: 0 0 10px 0;
      color: var(--azul-oscuro);
      font-size: 1.8em;
    }
    .fecha-actual {
      color: var(--gray-500);
      font-size: 1.1em;
      margin: 0.5rem 0 1.5rem;
      font-weight: 500;
      display: inline-block;
      background: var(--gray-100);
      padding: 0.5rem 1rem;
      border-radius: var(--radius-full);
      box-shadow: var(--shadow-sm);
    }
    .frase-inspiradora {
      font-style: italic;
      color: var(--primary);
      margin: 1.5rem 0 0;
      font-size: 1.2em;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
      line-height: 1.6;
      position: relative;
      padding: 0 2rem;
    }
    
    .frase-inspiradora::before,
    .frase-inspiradora::after {
      content: '"';
      font-size: 3em;
      color: var(--primary-light);
      opacity: 0.3;
      position: absolute;
      font-family: Georgia, serif;
      line-height: 1;
    }
    
    .frase-inspiradora::before {
      top: -10px;
      left: 0;
    }
    
    .frase-inspiradora::after {
      bottom: -30px;
      right: 0;
    }
    /* Secci贸n de filtros */
    .filtros-dashboard {
      background: var(--surface);
      border-radius: var(--radius-lg);
      padding: 1.25rem 1.5rem;
      box-shadow: var(--shadow);
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
      margin-bottom: 2rem;
      border: 1px solid var(--border-color);
    }
    
    @media (max-width: 768px) {
      .filtros-dashboard {
        flex-direction: column;
        align-items: stretch;
      }
    }
    .filtros-dashboard label {
      font-weight: 500;
      color: var(--gray-700);
      font-size: 0.9375rem;
      margin-bottom: 0.5rem;
      display: block;
    }
    .filtros-dashboard select,
    .filtros-dashboard input {
      width: 100%;
      padding: 0.625rem 1rem;
      border-radius: var(--radius);
      border: 1px solid var(--border-color);
      background: var(--surface);
      font-size: 0.9375rem;
      color: var(--text-primary);
      transition: border-color 0.2s, box-shadow 0.2s;
      cursor: pointer;
    }
    
    .filtros-dashboard select:focus,
    .filtros-dashboard input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }
    
    .filtros-dashboard .filter-group {
      flex: 1;
      min-width: 180px;
    }
    /* Secci贸n de ranking */
    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .card {
      background: var(--surface);
      border-radius: var(--radius-lg);
      padding: 1.5rem;
      box-shadow: var(--shadow);
      border: 1px solid var(--border-color);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
    
    .card-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.25rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--border-color);
    }
    
    .card-title {
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--text-primary);
      margin: 0;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .card-icon {
      width: 2.5rem;
      height: 2.5rem;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      flex-shrink: 0;
    }
    
    .card-icon.primary {
      background: linear-gradient(135deg, var(--primary), var(--primary-light));
    }
    
    .card-icon.success {
      background: linear-gradient(135deg, var(--success), #34d399);
    }
    
    .card-icon.warning {
      background: linear-gradient(135deg, var(--warning), #f59e0b);
    }
    
    .card-icon.danger {
      background: linear-gradient(135deg, var(--danger), #f87171);
    }
    
    .card-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-primary);
      margin: 0.5rem 0;
      line-height: 1.2;
    }
    
    .card-description {
      color: var(--gray-500);
      font-size: 0.875rem;
      margin: 0.25rem 0 0;
    }
    
    .trend {
      display: inline-flex;
      align-items: center;
      font-size: 0.875rem;
      font-weight: 500;
      padding: 0.25rem 0.5rem;
      border-radius: var(--radius-full);
      margin-top: 0.5rem;
    }
    
    .trend.up {
      color: #10b981;
      background-color: #d1fae5;
    }
    
    .trend.down {
      color: #ef4444;
      background-color: #fee2e2;
    }
    
    .trend-icon {
      margin-right: 0.25rem;
      display: inline-flex;
    }
    
    /* Secci贸n de ranking */
    .ranking-section {
      background: var(--surface);
      border-radius: var(--radius-lg);
      padding: 1.5rem;
      box-shadow: var(--shadow);
      border: 1px solid var(--border-color);
      margin-bottom: 2rem;
    }
    .ranking-section h3 {
      margin: 0 0 1.25rem 0;
      color: var(--text-primary);
      font-size: 1.375rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-weight: 600;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--border-color);
    }
    .ranking-section h3 a {
      color: inherit;
      text-decoration: none;
    }
    .ranking-section h3 a:hover {
      color: var(--azul-acento);
    }
    .ranking-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .ranking-item {
      display: flex;
      align-items: center;
      padding: 0.75rem 1rem;
      border-radius: var(--radius);
      background-color: var(--gray-50);
      transition: background-color 0.2s ease;
    }
    
    .ranking-item:hover {
      background-color: var(--gray-100);
    }
    
    .ranking-position {
      width: 2rem;
      height: 2rem;
      border-radius: 50%;
      background: var(--primary);
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 0.875rem;
      margin-right: 1rem;
      flex-shrink: 0;
    }
    
    .ranking-item:nth-child(1) .ranking-position {
      background: linear-gradient(135deg, #f59e0b, #fbbf24);
    }
    
    .ranking-item:nth-child(2) .ranking-position {
      background: linear-gradient(135deg, #94a3b8, #cbd5e1);
    }
    
    .ranking-item:nth-child(3) .ranking-position {
      background: linear-gradient(135deg, #b45309, #d97706);
    }
    
    .ranking-info {
      flex: 1;
      min-width: 0;
    }
    
    .ranking-name {
      font-weight: 500;
      color: var(--text-primary);
      margin-bottom: 0.25rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .ranking-metric {
      display: flex;
      align-items: center;
      font-size: 0.8125rem;
      color: var(--gray-600);
    }
    
    .ranking-value {
      font-weight: 600;
      color: var(--primary);
      margin-left: 0.5rem;
    }
    
    /* Responsive */
    @media (max-width: 1024px) {
      .dashboard-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 640px) {
      .dashboard-grid {
        grid-template-columns: 1fr;
      }
      
      .panel-bienvenida {
        padding: 1.5rem 1.25rem;
      }
      
      .card {
        padding: 1.25rem;
      }
      
      .card-value {
        font-size: 1.75rem;
      }
    }
    
    /* Animaciones */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in {
      animation: fadeIn 0.5s ease-out forwards;
    }
    
    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    .delay-400 { animation-delay: 0.4s; }
    .ranking-list li {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px solid var(--gris-borde);
    }
    .ranking-list li:last-child {
      border-bottom: none;
    }
    /* MODAL */
    #ranking-modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.5);
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }
    #ranking-modal > div {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      max-width: 500px;
      width: 90%;
      position: relative;
      box-shadow: 0 8px 32px rgba(0,0,0,0.15);
    }
    #ranking-modal button[onclick="cerrarModal()"]:first-child {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #64748b;
    }
    #ranking-modal button[onclick="cerrarModal()"]:first-child:hover {
      color: var(--azul-oscuro);
    }
    #ranking-modal h3 {
      margin: 0 0 1.5rem 0;
      color: var(--azul-oscuro);
      font-size: 1.5em;
    }
    #ranking-modal ol {
      list-style: none;
      padding: 0;
      margin: 0;
      max-height: 60vh;
      overflow-y: auto;
    }
    #ranking-modal li {
      padding: 0.8rem 0;
      border-bottom: 1px solid var(--gris-borde);
      display: flex;
      justify-content: space-between;
    }
    #ranking-modal li:last-child {
      border-bottom: none;
    }
    #ranking-modal button[onclick="cerrarModal()"]:last-child {
      margin-top: 1.5rem;
      padding: 0.5rem 1.5rem;
      border-radius: 8px;
      border: none;
      background-color: var(--azul-acento);
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    #ranking-modal button[onclick="cerrarModal()"]:last-child:hover {
      background-color: #1e90ff;
    }
    /* Responsive */
    @media (max-width: 768px) {
      .layout {
        flex-direction: column;
      }
      .sidebar {
        width: 100%;
        height: auto;
        padding: 15px;
      }
      .sidebar-nav {
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
      }
      .sidebar-nav button {
        width: auto;
        padding: 8px 15px;
        font-size: 0.9em;
      }
      .main-content {
        padding: 15px;
        height: auto;
      }
    }
  </style>
</head>
<body>
  <div class="layout">
    <!-- SIDEBAR -->
    <nav class="sidebar">
      <div class="sidebar-logo">
        <img src="logo connecting.png" alt="Logo Connecting"/>
      </div>
      <div class="sidebar-title">Connecting</div>
      <div class="sidebar-nav">
        <button onclick="location.href='inicio.html'">Inicio</button>
        <button class="active" onclick="location.href='lead.html'">Lead</button>
        <button onclick="location.href='costumer.html'">Costumer</button>
        <button onclick="location.href='Facturacion.html'">Facturacion</button>
        <button onclick="logout()">Cerrar sesi贸n</button>
      </div>
      <div class="sidebar-lema">
        "Conectando tu 茅xito, un cliente a la vez"
      </div>
    </nav>

    <!-- Contenido principal -->
    <main>
      <div class="dashboard-container">
        <!-- Panel de bienvenida -->
        <div class="panel-bienvenida">
          <h2>隆Bienvenido al Panel de Control!</h2>
          <p class="fecha-actual"><span id="fecha-hoy"></span></p>
          <p class="frase-inspiradora">"El 茅xito es la suma de peque帽os esfuerzos repetidos d铆a tras d铆a."</p>
        </div>

        <!-- Filtros -->
        <div class="filtros-dashboard">
          <label>Mes:</label>
          <select id="mes-select">
            <option value="0">Enero</option>
            <option value="1">Febrero</option>
            <option value="2">Marzo</option>
            <option value="3">Abril</option>
            <option value="4">Mayo</option>
            <option value="5">Junio</option>
            <option value="6">Julio</option>
            <option value="7">Agosto</option>
            <option value="8">Septiembre</option>
            <option value="9">Octubre</option>
            <option value="10">Noviembre</option>
            <option value="11">Diciembre</option>
          </select>
          <label>A帽o:</label>
          <select id="anio-select"></select>
        </div>

        <!-- Secci贸n de ranking -->
        <div class="ranking-section">
          <h3><a href="#" onclick="abrirModal('puntos')"> Ranking por Puntos</a></h3>
          <ol class="ranking-list" id="ranking-puntos-list">
            <div class="loader">Cargando...</div>
          </ol>
        </div>
      </div>
    </main>
  </div>

  <!-- Modal para ranking -->
  <div id="ranking-modal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); display:flex; justify-content:center; align-items:center;">
    <div style="background:white; padding:2rem; border-radius:1rem; max-width:500px; width:90%; position:relative;">
      <button onclick="cerrarModal()" style="position:absolute; top:1rem; right:1rem; background:none; border:none; font-size:1.5rem; cursor:pointer;"></button>
      <h3 id="modal-title">Ranking Completo</h3>
      <ol id="modal-ranking-list" style="list-style:none; padding:0;"></ol>
      <button onclick="cerrarModal()" style="margin-top:1.5rem; padding:0.5rem 1.5rem; border-radius:0.5rem; border:none; background-color:#22b3ec; color:white; cursor:pointer;">Cerrar</button>
    </div>
  </div>

  <script>
    // Funci贸n para abrir el modal de ranking
    function abrirModal(tipo) {
      const modal = document.getElementById('ranking-modal');
      const modalTitle = document.getElementById('modal-title');
      const modalList = document.getElementById('modal-ranking-list');
      
      if (tipo === 'puntos') {
        modalTitle.textContent = 'Ranking por Puntos';
        // Aqu铆 ir铆a la l贸gica para cargar el ranking completo
      }
      
      modal.style.display = 'flex';
    }

    // Funci贸n para cerrar el modal
    function cerrarModal() {
      document.getElementById('ranking-modal').style.display = 'none';
    }

    // Funci贸n para inicializar la fecha actual
    function inicializarFechaActual() {
      const fechaHoy = new Date();
      const opciones = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      const fechaFormateada = fechaHoy.toLocaleDateString('es-ES', opciones);
      const elementoFecha = document.getElementById('fecha-hoy');
      if (elementoFecha) {
        elementoFecha.textContent = fechaFormateada.charAt(0).toUpperCase() + fechaFormateada.slice(1);
      }
    }

    function setupFilters() {
      // Inicializar la fecha actual
      inicializarFechaActual();
      
      // Configurar el a帽o actual en el selector
      const hoy = new Date();
      const anioSelect = document.getElementById('anio-select');
      if (anioSelect) {
        // Asegurarse de que el a帽o actual est茅 seleccionado
        const anioActual = hoy.getFullYear();
        for (let i = anioActual - 5; i <= anioActual + 1; i++) {
          const option = document.createElement('option');
          option.value = i;
          option.textContent = i;
